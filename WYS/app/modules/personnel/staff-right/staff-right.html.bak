<div class="title">
    <div class="left">员工</div>
    <div class="right">
        <span class="iconfont">&#xe638;</span>
        <input type="text">
    </div>
    <span id="new" class="new" (click)="showstaffcreate()">新建</span>
</div>
<div class="content">
    <form action="#" class="newperson" [style.display]="is_show_create ? 'block' : 'none'">
        <div class="up">
            <img src="/app/static/img/mr.png" alt="">
            <a href="">上传头像</a>
        </div>
        <div class="down">
            <div class="left">
                <div>	
                    <label for="name">姓名：</label>
                    <div class="group">
                    <input type="text" id="name">
                    </div>
                </div>

                <div>
                    <label for="phone" class="phone">手机号码：</label>
                    <div class="group">
                    <input type="text" id="name">
                    </div>
                </div>

                <div>
                    <label for="email">邮箱：</label>
                    <div class="group">
                    <input type="email" id="email">
                    </div>

                </div>

                <div>
                    <label for="office">职位：</label>
                    <div class="group">
                        <input type="text" id="office">
                        <i class="iconfont">&#xe696;</i>
                    </div>
                    
                </div>

                <div>
                    <label for="department">部门：</label>
                    <div class="group">
                        <input type="text" id="department">
                        <i class="iconfont">&#xe696;</i>
                    </div>
                </div>

                <div>
                    <label for="manager" class="manager">部门经理：</label>	
                    <div class="group">
                        <input type="text" id="manager">
                        <i class="iconfont">&#xe696;</i>
                    </div>
                </div>
            </div>
            <div class="right">
                <span>地址：</span>
                <input type="text" placeholder="城市">
                <div class="group">
                    <input type="text" placeholder="省份">
                    <i class="iconfont">&#xe696;</i>
                </div>
                <span class="detail">详细地址：</span>
                <textarea name="" id="" cols="30" rows="10"></textarea>
            </div>
        </div>
        <div class="bottom">
            <input type="submit" value="提交">
        </div>
    </form>
